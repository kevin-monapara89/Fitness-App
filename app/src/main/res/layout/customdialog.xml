<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C7000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"
        android:layout_marginTop="@dimen/_270sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        android:backgroundTint="#dfdfdf"
        android:background="@drawable/edtbtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_gravity="center"
                android:src="@drawable/img_29"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Password Has \nBeen Reset "
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/_21sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yourâ€™ll shortly receive an email with a \n code to setup a new password"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#8F8585"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnnext"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginRight="@dimen/_100sdp"
                android:background="@drawable/btn"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>